<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <include
        android:id="@+id/layout_top"
        layout="@layout/topbar_first"/>

    <Button
        android:id="@+id/bt_memo"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@id/layout_top"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/shape_button_green"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/label_memo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/bt_fcl"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@id/bt_memo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/shape_button_green"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/label_fcl"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>


    <Button
        android:id="@+id/bt_exit"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@id/bt_fcl"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:background="@drawable/shape_button_green"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text=" 退出 "
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</RelativeLayout>
