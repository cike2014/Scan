<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/flash_dialog_margin"
    android:layout_marginRight="@dimen/flash_dialog_margin"
    android:background="@drawable/flashmode_dialog_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_dialog_title"
            android:layout_width="@dimen/flash_dialog_title_height"
            android:layout_height="@dimen/flash_dialog_title_height"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/flash_dialog_title_height"
            android:gravity="center"
            android:textColor="@color/flashmode_dialog_title_color"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/horizontal_line" />

    <TextView
        android:id="@+id/bt_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:textColor="@color/flashmode_dialog_title_color"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:textColor="@color/flashmode_dialog_title_color"
        android:textSize="13sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv_dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:visibility="gone" />

    <View
        android:id="@+id/v_buttom_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/flash_dialog_bottom_height"
        android:visibility="gone" >

        <Button
            android:id="@+id/bt_cancel_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/flashmode_dialog_leftbtn_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cancle_button_color"
            android:textSize="15sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/flashmode_dialog_vertical_line" />

        <Button
            android:id="@+id/bt_sure_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/flashmode_dialog_rightbtn_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/orangetext"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_dialog_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/flash_dialog_bottom_height"
        android:background="@drawable/dialog_buttom_selector"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/orangetext"
        android:textSize="15sp" />

</LinearLayout>